\setlength{\voffset}{-1in}
\setlength{\headheight}{\baselineskip}

\newlength{\whitemargin@height}

\newcommand{\vpagesetup}[3][1]{
  \renewcommand{\baselinestretch}{#1}
  \normalsize
  %
  % calculating \textheight
  %
  \ifnum #2 < 0
    \relax
  \else
    \setlength{\textheight}{#2\baselineskip}
    \addtolength{\textheight}{-\baselineskip}
    \addtolength{\textheight}{\topskip}
  \fi
  %
  % calculating \topmargin
  %
  \setlength{\whitemargin@height}{\paperheight}
  \addtolength{\whitemargin@height}{-\headheight}
  \addtolength{\whitemargin@height}{-\headsep}
  \addtolength{\whitemargin@height}{-\textheight}
  \addtolength{\whitemargin@height}{-\footskip}
  \setlength{\topmargin}{#3\whitemargin@height}
}

