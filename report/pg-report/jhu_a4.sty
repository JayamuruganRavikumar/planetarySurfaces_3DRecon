\setlength{\hoffset}{-1in}
\newlength{\total@width}
\newlength{\whitemargin@width}
\newlength{\tmp@width}

\newcommand{\hpagesetup}[3]{
  \setlength{\total@width}{#1}
  \setlength{\textwidth}{#2\total@width}
  \settowidth{\marginparsep}{\rmfamily\normalsize ---}
  \setlength{\marginparwidth}{\marginparsep}
  
  \setlength{\tmp@width}{\textwidth}
  \addtolength{\tmp@width}{\marginparsep}
  \addtolength{\tmp@width}{\marginparwidth}
  
  \ifdim \tmp@width > \total@width
    \setlength{\textwidth}{\total@width}
    \setlength{\marginparsep}{0pt}
    \setlength{\marginparwidth}{0pt}
  \else
    \setlength{\marginparwidth}{\total@width}
    \addtolength{\marginparwidth}{-\textwidth}
    \addtolength{\marginparwidth}{-\marginparsep}
  \fi
  
  \setlength{\whitemargin@width}{\paperwidth}
  \addtolength{\whitemargin@width}{-\total@width}
  
  \setlength{\oddsidemargin}{#3\whitemargin@width}
  \setlength{\evensidemargin}{\whitemargin@width}
  \addtolength{\evensidemargin}{-\oddsidemargin}
  \addtolength{\evensidemargin}{\marginparsep}
  \addtolength{\evensidemargin}{\marginparwidth}
}

